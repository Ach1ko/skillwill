// Pirveli Davaleba ------------

function replaceValue(string, valueToReplace, valueToReplaceWith) {
  return string.split(valueToReplace).join(valueToReplaceWith);
}

const originalString = "Old, String";
const replacedString = replaceValue(originalString, "Old", "New");
console.log(replacedString); 

// Meore Davaleba ------------

function capital(sentence) {
  return sentence.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
}

const originalSentence = "ra mshvidad mocurda chvens napirtan gemi";
const capitalizedSentence = capital(originalSentence);
console.log(capitalizedSentence);

// Mesame Davaleba ------------

function sortByAge(users) {
  return users.sort((a, b) => a.age - b.age);
}

const users = [
  { name: 'Lasha', age: 30 },
  { name: 'Giga', age: 25 },
  { name: 'Saba', age: 20 }
];

const sortedUsers = sortByAge(users);
console.log(sortedUsers);
